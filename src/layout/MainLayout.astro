---
import '../styles/global.css';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import Banner from '../components/shared/Banner.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
    title: string;
}

const { title } = Astro.props;

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ClientRouter />
	</head>
	<body>
		<div id="bg-header" class="bg-gray-900 min-h-screen">
			<Header />
			<Banner />
		</div>
		<main>
            <slot></slot>
        </main>
		
		<Footer />
	</body>
</html>


<style>
#bg-header{
	position: relative;
	background-image: url('https://despachocontablemexico.com.mx/wp-content/uploads/2021/11/1500x844_contabilidad_negocio.jpg.webp');
	background-size: cover;
	background-position: center;
	height: 100vh;
}

#bg-header::before{
	content: "";
	position: absolute;
	inset: 0;
	background-color: rgba(0, 0, 0, 0.65);
	z-index: 1;
}

#bg-header > * {
	position: relative;
	z-index: 2;
}

</style>